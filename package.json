{
  "name": "food_tracker_node",
  "version": "1.0.0",
  "description": "NestJS + Prisma backend for Restro",
  "main": "dist/main.js",
  "private": true,
  "engines": {
    "node": ">=20 <23",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/main.ts",
    "build": "tsc -p tsconfig.json",
    "prestart": "node -e \"const fs=require('fs'); if(!fs.existsSync('dist')){process.exit(1)}\" || npm run build",
    "start": "prisma generate && node dist/main.js",
    "start:prod": "prisma generate && node dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@prisma/client": "^6.14.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.1",
    "googleapis": "^158.0.0",
    "prisma": "^6.14.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}